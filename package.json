{
  "name": "project-setup",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "generate": "npx drizzle-kit generate",
    "migrate": "npx drizzle-kit migrate",
    "studio": "npx drizzle-kit studio",
    "lint": "eslint \"app/**/*.{ts,tsx,js,jsx}\" \"components/**/*.{ts,tsx,js,jsx}\" \"lib/**/*.{ts,tsx,js,jsx}\" \"actions/**/*.{ts,tsx,js,jsx}\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"app/**/*.{ts,tsx,js,jsx}\" \"components/**/*.{ts,tsx,js,jsx}\" \"lib/**/*.{ts,tsx,js,jsx}\" \"actions/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write 'app/**/*.{js,jsx,ts,tsx,css,html}' 'components/**/*.{js,jsx,ts,tsx,css,html}' 'lib/**/*.{js,jsx,ts,tsx,css,html}' 'actions/**/*.{js,jsx,ts,tsx,css,html}'",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.4",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.2",
    "drizzle-zod": "^0.6.0",
    "lucide-react": "^0.469.0",
    "next": "15.1.2",
    "next-auth": "^5.0.0-beta.25",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/node": "^20",
    "@types/pg": "^8.11.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9",
    "eslint-config-next": "15.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "app/**/*.{ts,tsx,js,jsx}": [
      "npm run lint",
      "npm run format"
    ]
  }
}
